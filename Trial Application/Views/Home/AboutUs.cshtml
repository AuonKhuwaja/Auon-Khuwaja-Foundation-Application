@{
    ViewData["Title"] = "About Us";
}

<style>
* {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
}

body {
    font-family: Arial, sans-serif;
    overflow-x: hidden;
}

/* HERO SECTION */
.hero {
    position: relative;
    background-image: url("https://images.unsplash.com/photo-1582213782179-e0d53f98f2ca?auto=format&fit=crop&w=1600&q=80");
    background-size: cover;
    background-position: center;
    height: 100vh;
    display: flex;
    justify-content: center;
    align-items: center;
    text-align: center;
    color: white;
}

.hero .overlay {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: rgba(34, 139, 84, 0.55);
    z-index: 1;
}

.hero-content {
    position: relative;
    z-index: 2;
    max-width: 800px;
    padding: 20px;
}

.small-title {
    font-size: 18px;
    letter-spacing: 2px;
    text-transform: uppercase;
    margin-bottom: 10px;
}

.hero-content h1 {
    font-size: 48px;
    margin-bottom: 20px;
}

.sub-text {
    font-size: 20px;
    margin-bottom: 30px;
}

.learn-btn {
    background: #2ecc71;
    color: white;
    padding: 12px 30px;
    border-radius: 8px;
    text-decoration: none;
    font-size: 18px;
    font-weight: bold;
    transition: 0.3s;
}

.learn-btn:hover {
    background: #27ae60;
}

/* ABOUT SECTION */
.about_area {
    padding: 80px 20px;
    background: #f9f9f9;
}

.about-title {
    font-size: 36px;
    font-weight: 700;
    margin-bottom: 20px;
    color: #222;
    text-align: center;
}

.about-description {
    font-size: 18px;
    color: #555;
    line-height: 1.6;
    text-align: center;
    max-width: 800px;
    margin: 0 auto 60px auto;
}

.single_about {
    background: #fff;
    padding: 40px 20px 30px 20px;
    border-radius: 12px;
    box-shadow: 0 8px 20px rgba(0,0,0,0.05);
    text-align: center;
    transition: transform 0.3s, box-shadow 0.3s;
    display: flex;
    flex-direction: column;
    align-items: center;
}

.single_about:hover {
    transform: translateY(-10px);
    box-shadow: 0 12px 25px rgba(0,0,0,0.1);
}

.single_about img {
    width: 160px;
    height: 160px;
    object-fit: cover;
    border-radius: 50%;
    margin-bottom: 25px;
    transition: transform 0.3s;
}

.single_about:hover img {
    transform: scale(1.1);
}

.single_about h4 {
    font-size: 24px;
    margin-bottom: 15px;
    color: #27ae60;
}

.single_about p {
    font-size: 16px;
    color: #555;
    line-height: 1.5;
}

/* Scroll animation */
.animate {
    opacity: 0;
    transform: translateY(20px);
    transition: all 0.6s ease-in-out;
}

.animate.visible {
    opacity: 1;
    transform: translateY(0);
}

/* Cards container */
.about-cards-container {
    display: flex;
    justify-content: space-between;
    gap: 20px;
    flex-wrap: nowrap;
    overflow-x: auto;
}

/* Responsive */
@@media (max-width: 992px) {
    .single_about img {
        width: 130px;
        height: 130px;
    }
}

@@media (max-width: 768px) {
    .hero-content h1 {
        font-size: 32px;
    }

    .sub-text {
        font-size: 16px;
    }

    .about-title {
        font-size: 28px;
    }

    .about-description {
        font-size: 16px;
    }

    .single_about {
        flex: 0 0 80%;
    }
}
</style>

<section class="hero">
    <div class="overlay"></div>
    <div class="hero-content">
        <p class="small-title">Making a Difference Starts With You</p>
        <h1>Together, We Create Hope</h1>
        <p class="sub-text">
            Every act of kindness changes a life. Join us in uplifting communities and supporting those in need.
        </p>
    </div>
</section>

<section class="about_area">
    <div class="container">
        <div class="text-center mb-5">
            <h3 class="about-title">Who We Are</h3>
            <p class="about-description">
                Helping Hands Foundation is a non-profit initiative dedicated to supporting underprivileged individuals through
                welfare programs, emergency aid, education support, and community upliftment projects.
                We believe in spreading hope, compassion, and positive change — one step at a time.
            </p>
        </div>

        <div class="about-cards-container">
            <div class="single_about animate" style="flex: 0 0 32%;">
                <img src="https://images.unsplash.com/photo-1643321611132-15f7b8a63347?w=600&auto=format&fit=crop&q=60" alt="Financial Assistance">
                <h4>Financial Assistance</h4>
                <p>
                    We provide support for food, medicine, education fees, and urgent financial needs
                    to families facing difficult times.
                </p>
            </div>

            <div class="single_about animate" style="flex: 0 0 32%;">
                <img src="https://images.unsplash.com/photo-1488521787991-ed7bbaae773c?w=600&auto=format&fit=crop&q=60" alt="Community Support">
                <h4>Community Support</h4>
                <p>
                    Our volunteers work closely with local communities to deliver resources and ensure
                    no one is left behind in times of crisis.
                </p>
            </div>

            <div class="single_about animate" style="flex: 0 0 32%;">
                <img src="https://plus.unsplash.com/premium_photo-1683140538884-07fb31428ca6?w=600&auto=format&fit=crop&q=60" alt="Awareness Programs">
                <h4>Awareness & Education</h4>
                <p>
                    We conduct awareness drives and educational sessions to empower individuals
                    with knowledge and opportunities for a better future.
                </p>
            </div>
        </div>
    </div>
</section>
<script>
    // Scroll animation script at the top
    document.addEventListener('DOMContentLoaded', () => {
        const elements = document.querySelectorAll('.animate');
        const checkVisibility = () => {
            elements.forEach(el => {
                const rect = el.getBoundingClientRect();
                if (rect.top < window.innerHeight - 100) {
                    el.classList.add('visible');
                }
            });
        };
        window.addEventListener('scroll', checkVisibility);
        checkVisibility();
    });
</script>
