@{
    ViewData["Title"] = "Users";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Donate</title>

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- FontAwesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css">
    <style>
        body {
            background-color: #f8f9fa;
        }

        .donation-card {
            border-radius: 1rem;
            padding: 2rem;
            box-shadow: 0 8px 20px rgba(0,0,0,0.1);
            background-color: #fff;
            max-width: 700px;
            margin: auto;
            margin-top: 50px;
        }

            .donation-card h2 {
                margin-bottom: 1.5rem;
            }

        .amount-btn {
            margin-right: 0.5rem;
            margin-bottom: 0.5rem;
        }

        .custom-amount input {
            width: 150px;
            display: inline-block;
        }

        .payment-methods i {
            margin-right: 0.5rem;
        }

        .info-section {
            background-color: #f1f5f9;
            padding: 1rem;
            border-radius: 0.5rem;
            margin-top: 1rem;
        }

        .submit-btn {
            width: 100%;
            font-size: 1.1rem;
            padding: 0.75rem;
        }
    </style>
</head>
<body>

    <div class="donation-card">
        <h2 class="text-primary text-center">Make a Donation</h2>

        <!-- Donation Amount Selection -->
        <div class="mb-4">
            <h5>Select Amount</h5>
            <div>
                <button class="btn btn-outline-primary amount-btn">$10</button>
                <button class="btn btn-outline-primary amount-btn">$25</button>
                <button class="btn btn-outline-primary amount-btn">$50</button>
                <button class="btn btn-outline-primary amount-btn">$100</button>
            </div>
            <div class="custom-amount mt-2">
                <label>Custom: $</label>
                <input type="number" min="1" placeholder="Enter amount" class="form-control d-inline-block">
            </div>
        </div>

        <!-- Recurring Donations -->
        <div class="mb-4">
            <h5>Recurring Donation</h5>
            <div class="btn-group" role="group">
                <input type="radio" class="btn-check" name="recurring" id="weekly" autocomplete="off">
                <label class="btn btn-outline-primary" for="weekly">Weekly</label>

                <input type="radio" class="btn-check" name="recurring" id="monthly" autocomplete="off">
                <label class="btn btn-outline-primary" for="monthly">Monthly</label>

                <input type="radio" class="btn-check" name="recurring" id="yearly" autocomplete="off">
                <label class="btn btn-outline-primary" for="yearly">Yearly</label>
            </div>
        </div>

        <!-- Payment Methods -->
        <div class="mb-4">
            <h5>Payment Method</h5>
            <div class="payment-methods">
                <div class="form-check mb-2">
                    <input class="form-check-input" type="radio" name="paymentMethod" id="creditCard">
                    <label class="form-check-label" for="creditCard">
                        <i class="fa fa-credit-card"></i> Credit Card
                    </label>
                </div>
                <div class="form-check mb-2">
                    <input class="form-check-input" type="radio" name="paymentMethod" id="paypal">
                    <label class="form-check-label" for="paypal">
                        <i class="fa fa-paypal"></i> PayPal
                    </label>
                </div>
                <div class="form-check mb-2">
                    <input class="form-check-input" type="radio" name="paymentMethod" id="bank">
                    <label class="form-check-label" for="bank">
                        <i class="fa fa-university"></i> Bank Transfer
                    </label>
                </div>
                <div class="form-check mb-2">
                    <input class="form-check-input" type="radio" name="paymentMethod" id="mobile">
                    <label class="form-check-label" for="mobile">
                        <i class="fa fa-mobile-screen-button"></i> Mobile Wallets
                    </label>
                </div>
            </div>
        </div>

        <!-- Transparency & Tax Info -->
        <div class="info-section">
            <h6>Transparency</h6>
            <p>Your donations are used to support our programs: 70% for field projects, 20% for education & awareness, 10% administrative costs.</p>
            <h6>Tax Deduction</h6>
            <p>Your donation may be tax-deductible. Please consult your tax advisor.</p>
        </div>

        <!-- Submit Button -->
        <div class="mt-4">
            <button class="btn btn-primary submit-btn"><i class="fa fa-heart me-1"></i> Donate Now</button>
        </div>
    </div>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
