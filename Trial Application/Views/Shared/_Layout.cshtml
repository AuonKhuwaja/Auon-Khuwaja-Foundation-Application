<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>AK Foundation | Admin Panel</title>

    <!-- FontAwesome Icons -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css">

    <style>
        * {
            box-sizing: border-box;
            margin: 0;
            padding: 0;
        }

        /* ---------------- TOP BAR ---------------- */
        .top-bar {
            display: flex;
            justify-content: space-between;
            padding: 10px 40px;
            background: #ffffff;
            color: #333;
            font-size: 14px;
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            z-index: 1000;
            box-shadow: 0 2px 5px rgba(0,0,0,0.1);
        }

            .top-bar i {
                margin-right: 5px;
            }

        /* ---------------- NAVBAR ---------------- */
        .navbar {
            display: flex;
            justify-content: space-between;
            align-items: center;
            background: linear-gradient(135deg, #2ecc71, #009150);
            padding: 15px 40px;
            border-radius: 0 0 20px 20px;
            position: fixed;
            top: 40px; /* Below top-bar */
            left: 0;
            width: 100%;
            z-index: 999;
        }

        .logo {
            font-size: 24px;
            color: white;
            font-weight: bold;
            display: flex;
            align-items: center;
            gap: 8px;
        }

        .menu {
            list-style: none;
            display: flex;
            gap: 30px;
        }

            .menu li a {
                text-decoration: none;
                color: white;
                font-size: 16px;
                font-weight: 500;
            }

        .donate-btn {
            background: white;
            padding: 10px 22px;
            color: #2ecc71;
            font-weight: bold;
            border-radius: 8px;
            text-decoration: none;
        }

        /* ---------------- HERO / BANNER ---------------- */
        .hero {
            margin-top: 120px; /* pushes below navbar */
            width: 100%;
            height: 100vh;
            background-image: url('https://images.unsplash.com/photo-1601463334649-6e6bb3c0e547?q=80&w=1470&auto=format&fit=crop');
            background-size: cover;
            background-position: center;
            background-repeat: no-repeat;
            display: flex;
            justify-content: center;
            align-items: center;
            text-align: center;
            color: white;
            padding: 20px;
        }

            .hero h1 {
                font-size: 60px;
                font-weight: bold;
                text-shadow: 0 4px 10px rgba(0,0,0,0.4);
            }

            .hero p {
                margin-top: 10px;
                font-size: 20px;
                max-width: 600px;
            }

        /* ---------------- FOOTER ---------------- */
        footer {
            background: linear-gradient(135deg, #2ecc71, #009150);
            color: white;
            padding: 50px 40px 20px 40px;
            font-family: Arial, sans-serif;
        }

        .footer-container {
            display: flex;
            justify-content: space-between;
            flex-wrap: wrap;
            gap: 30px;
        }

        .footer-column {
            flex: 1;
            min-width: 220px;
        }

            .footer-column h3 {
                font-size: 20px;
                margin-bottom: 15px;
                font-weight: bold;
                position: relative;
            }

                .footer-column h3::after {
                    content: '';
                    position: absolute;
                    left: 0;
                    bottom: -5px;
                    width: 50px;
                    height: 2px;
                    background: white;
                }

            .footer-column p {
                line-height: 1.6;
                font-size: 15px;
                color: #f0f0f0;
            }

            .footer-column ul {
                list-style: none;
                padding: 0;
            }

                .footer-column ul li {
                    margin-bottom: 10px;
                }

                    .footer-column ul li a {
                        text-decoration: none;
                        color: white;
                        font-size: 15px;
                        transition: 0.3s;
                    }

                        .footer-column ul li a:hover {
                            color: #d1f0d1;
                        }

        .social-icons a {
            color: white;
            font-size: 20px;
            margin-right: 15px;
            transition: 0.3s;
        }

            .social-icons a:hover {
                color: #d1f0d1;
            }

        .footer-bottom {
            text-align: center;
            margin-top: 40px;
            font-size: 14px;
            border-top: 1px solid rgba(255,255,255,0.3);
            padding-top: 15px;
        }

        @@media (max-width: 768px) {
            .footer-container {
                flex-direction: column;
                text-align: center;
            }

            .footer-column {
                margin-bottom: 30px;
            }
        }

        /* ---------------- RESPONSIVE ---------------- */
        @@media(max - width: 768px)

        {
            .navbar {
                flex-direction: column;
                gap: 15px;
                padding: 15px;
            }

            .menu {
                flex-direction: column;
                gap: 10px;
            }

            .hero h1 {
                font-size: 40px;
            }
        }
    </style>
</head>

<body>

    <!-- TOP CONTACT BAR -->
    <div class="top-bar">
        <div class="left">
            <span><i class="fa-solid fa-phone"></i> +92 3321921110</span>
            <span><i class="fa-solid fa-envelope"></i> auonkhuwaja10@gmail.com</span>
        </div>
        <div>
            <i class="fa-brands fa-facebook"></i>
            <i class="fa-brands fa-pinterest"></i>
            <i class="fa-brands fa-linkedin"></i>
            <i class="fa-brands fa-twitter"></i>
        </div>
    </div>

    <!-- NAVBAR -->
    <nav class="navbar">
        <div class="logo"><i class="fa-solid fa-hand-holding-heart"></i> HelpingHands</div>

        <ul class="menu">
            <li><a asp-controller="Home" asp-action="Index">Home</a></li>
            <li><a asp-controller="Requests" asp-action="Index">Requests</a></li>
            <li><a asp-controller="Home" asp-action="Users">Users</a></li>
            <li><a asp-controller="Home" asp-action="Donor">Donors</a></li>
            <li><a asp-controller="Reports" asp-action="Index">Reports</a></li>
            <li>
                <a asp-controller="Home" asp-action="AboutUs">About</a>
            </li>
            <li><a asp-controller="Home" asp-action="Contact">Contact</a></li>
        </ul>

        <a href="/Donate" class="donate-btn">Donate</a>
    </nav>
   
   
    <!-- BODY CONTENT -->
    <div class="content">
        @RenderBody()
    </div>


    <!-- FOOTER -->
    <footer>
        <div class="footer-container">
            <div class="footer-column about">
                <h3>About AK Foundation</h3>
                <p>We are dedicated to helping the needy, supporting education, feeding the hungry, and bringing hope to underprivileged communities.</p>
            </div>

            <div class="footer-column links">
                <h3>Quick Links</h3>
                <ul>
                    <li><a href="#">Home</a></li>
                    <li><a href="#">Requests</a></li>
                    <li><a href="#">Donors</a></li>
                    <li><a href="#">Reports</a></li>
                    <li><a href="#">Contact</a></li>
                </ul>
            </div>

            <div class="footer-column social">
                <h3>Follow Us</h3>
                <div class="social-icons">
                    <a href="#"><i class="fa-brands fa-facebook-f"></i></a>
                    <a href="#"><i class="fa-brands fa-instagram"></i></a>
                    <a href="#"><i class="fa-brands fa-twitter"></i></a>
                    <a href="#"><i class="fa-brands fa-youtube"></i></a>
                </div>
            </div>
        </div>

        <div class="footer-bottom">
            <p>ï¿½ 2025 AK Foundation. All Rights Reserved.</p>
        </div>
    </footer>


</body>
</html>
