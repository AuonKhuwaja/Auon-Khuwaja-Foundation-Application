<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>AK Foundation | Admin Panel</title>
    <!-- FontAwesome Icons -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css">
    <!-- Custom CSS -->
    <link rel="stylesheet" href="/css/site.css" />
    <style>
        /* Box sizing for all elements */
        * {
            box-sizing: border-box;
        }

        /* Top Bar */
        .top-bar {
            display: flex;
            justify-content: space-between;
            padding: 10px 40px;
            background: #ffffff;
            color: #333;
            font-size: 14px;
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            z-index: 1000;
            box-shadow: 0 2px 5px rgba(0,0,0,0.1);
        }

        .top-bar .left span {
            margin-right: 15px;
        }

        .top-bar i {
            margin-right: 5px;
        }

        /* Navbar */
        .navbar {
            display: flex;
            justify-content: space-between;
            align-items: center;
            background: #2ecc71;
            padding: 15px 40px;
            border-radius: 0 0 20px 20px;
            position: fixed;
            top: 40px; /* below top-bar */
            left: 0;
            width: 100%;
            z-index: 999;
        }

        .logo {
            font-size: 24px;
            color: white;
            font-weight: bold;
            display: flex;
            align-items: center;
            gap: 8px;
        }

        .navbar .menu {
            list-style: none;
            display: flex;
            gap: 30px;
            margin: 0;
            padding: 0;
        }

        .navbar .menu li a {
            text-decoration: none;
            color: white;
            font-size: 16px;
            font-weight: 500;
        }

        .donate-btn {
            background: white;
            padding: 10px 22px;
            color: #2ecc71;
            font-weight: bold;
            border-radius: 8px;
            text-decoration: none;
        }

        /* Content below fixed header */
        .content {
            margin-top: 120px; /* top-bar + navbar height */
            padding: 20px;
        }

        /* Responsive adjustments */
        @@media (max-width: 768px) {
            .navbar {
                flex-direction: column;
                align-items: flex-start;
                padding: 15px 20px;
            }

            .navbar .menu {
                flex-direction: column;
                gap: 10px;
                width: 100%;
            }

            .donate-btn {
                margin-top: 10px;
                width: 100%;
                text-align: center;
            }

            .content {
                margin-top: 160px; /* extra space for stacked header */
            }

            .top-bar {
                flex-direction: column;
                gap: 5px;
                padding: 10px 20px;
            }
        }
    </style>
</head>
<body>
    <!-- Top Contact Bar -->
    <div class="top-bar">
        <div class="left">
            <span><i class="fa-solid fa-phone"></i> +1 (454) 556-5656</span>
            <span><i class="fa-solid fa-envelope"></i> support@helpinghands.org</span>
        </div>
        <div class="right">
            <i class="fa-brands fa-facebook"></i>
            <i class="fa-brands fa-pinterest"></i>
            <i class="fa-brands fa-linkedin"></i>
            <i class="fa-brands fa-twitter"></i>
        </div>
    </div>

    <!-- Main Navigation Bar -->
    <nav class="navbar">
        <div class="logo">
            <i class="fa-solid fa-hand-holding-heart"></i>
            HelpingHands
        </div>
        <ul class="menu">
            <li><a asp-controller="Home" asp-action="Index">Home</a></li>
            <li><a asp-controller="Requests" asp-action="Index">Requests</a></li>
            <li><a asp-controller="Users" asp-action="Index">Users</a></li>
            <li><a asp-controller="Donors" asp-action="Index">Donors</a></li>
            <li><a asp-controller="Reports" asp-action="Index">Reports</a></li>
            <li><a asp-controller="Home" asp-action="About">About</a></li>
            <li><a asp-controller="Home" asp-action="Contact">Contact</a></li>
        </ul>

        <a href="/Donate" class="donate-btn">Donate</a>
    </nav>

    <!-- Main Content -->
    <div class="content">
        @RenderBody()
    </div>
</body>
</html>
